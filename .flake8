[flake8]
max-line-length = 120
exclude =
    .venv,
    cdk.out,
    build,
    dist,
    .eggs,
    .git,
    __pycache__
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
# E501: line too long (CDK projects often have long NagSuppression strings)
extend-ignore = E203, W503, E501
